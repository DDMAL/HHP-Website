<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title %></title>
    
    <%= stylesheet_link_tag "bootswatch-cerulean.min" %>
    <%= javascript_include_tag  "jquery-1.11.0.min", "all", "bootstrap.min.js" %>
  </head>
  
  <body class="<%= page_classes %>">
    <header class="navbar navbar-inverse navbar-static-top bs-docs-nav" id="topNavbar" role="banner">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
               <span class="sr-only">Toggle navigation</span>
               <span class="icon-bar"></span>
               <span class="icon-bar"></span>
               <span class="icon-bar"></span>
            </button>
          <a href="/" class="navbar-brand">Website title!</a>
        </div>
        <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
          <ul class="nav navbar-nav navbar-right" id="headerLinks">
            <li>
              <a href="/">Subpage 1!</a>
            </li>
          </ul>
        </nav>
      </div>
    </header>
    <div class="container">
      <div id="maininfo">       
        <%= yield %>
      </div> <!-- row -->
    </div>
  </body>
</html>